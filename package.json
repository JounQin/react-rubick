{
  "name": "react-rubick",
  "version": "0.0.1",
  "description": "Alauda front end project Rubick built with Vue stack + TypeScript, just for study.",
  "repository": "git@github.com:JounQin/react-rubick.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env DEBUG=rubick:* NODE_ENV=development ts-node server",
    "build": "rimraf dist && webpack --config build/webpack.config.ts --colors --progress",
    "lint": "tslint -p . -e 'node_modules/**/* **/*.ts' -t stylish",
    "precommit": "lint-staged",
    "sync:push": "bash build/sync-push.sh"
  },
  "lint-staged": {
    "*.ts": ["tslint -p . -t stylish", "git add"],
    "*.{json,md}": ["prettier --write", "git add"]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "printWidth": 150
        }
      }
    ]
  },
  "dependencies": {
    "koa": "^2.5.0",
    "koa-compose": "^4.0.0",
    "react": "^16.2.0",
    "react-async-component": "^1.0.2",
    "react-dom": "^16.2.0",
    "react-router": "^4.2.0",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/html-webpack-plugin": "^2.30.3",
    "@types/koa": "^2.0.44",
    "@types/koa-compose": "^3.2.2",
    "@types/koa-webpack": "^1.0.0",
    "@types/node": "^9.4.7",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^15.5.7",
    "@types/react-router": "^4.0.22",
    "@types/react-router-config": "^1.0.6",
    "@types/react-router-dom": "^4.2.4",
    "@types/webpack": "^4.1.0",
    "@types/webpack-env": "^1.13.5",
    "cross-env": "^5.1.4",
    "debug": "^3.1.0",
    "html-webpack-plugin": "^3.0.6",
    "husky": "^0.14.3",
    "koa-webpack": "^3.0.2",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "prop-types": "^15.6.1",
    "rimraf": "^2.6.2",
    "ts-loader": "^4.0.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12"
  }
}
